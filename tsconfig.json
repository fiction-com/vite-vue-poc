{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "removeComments": true
  },
  "exclude": ["node_modules", "cdk.out"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  }
}
